@model Spor_Salonu.Models.beslenme

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_layoutadmin.cshtml";
}

    <div class="content-wrapper">
        <div class="container">
            <h2>Beslenme Programı Güncelle</h2>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.id)

        <table class="table table-bordered">
            <tr>
                <td>Kategori</td>
                <td>
                    @Html.DropDownList("kategorid", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.kategorid, "", new { @class = "text-danger" })
                </td>
            </tr>
            <tr>
                <td>Gün</td>
                <td>
                    @Html.DropDownList("gunid", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.gunid, "", new { @class = "text-danger" })
                </td>
            </tr>
            <tr>
                <td>Sabah</td>
                <td>
                    @Html.EditorFor(model => model.aciklamas, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.aciklamas, "", new { @class = "text-danger" })
                </td>
            </tr>
            <tr>
                <td>Öğlen</td>
                <td>
                    @Html.EditorFor(model => model.aciklamao, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.aciklamao, "", new { @class = "text-danger" })
                </td>
            </tr>
            <tr>
                <td>Akşam</td>
                <td>
                    @Html.EditorFor(model => model.aciklamaa, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.aciklamaa, "", new { @class = "text-danger" })
                </td>
            </tr>
            <tr>
                <td></td>
                <td>
                    <input type="submit" value="Kaydet" class="btn btn-primary" />
                </td>
            </tr>
            <tr>
                <td></td>
                <td>
                    @Html.ActionLink("Listeye Geri Dön", "Index", null, new { @class = "btn btn-default" })
                </td>
            </tr>
        </table>
                        }
            </div>
        </div>
